#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	# No build step needed - standalone Python application

override_dh_auto_install:
	# Install the main executable
	install -D -m 755 sshpilot.py $(CURDIR)/debian/sshpilot/usr/bin/sshpilot
	# Install CSS file
	install -D -m 644 ssh_manager.css $(CURDIR)/debian/sshpilot/usr/share/sshpilot/ssh_manager.css
	# Install icon
	install -D -m 644 sshpilot.png $(CURDIR)/debian/sshpilot/usr/share/pixmaps/sshpilot.png
	# Install desktop file
	install -D -m 644 debian/io.github.mfat.sshpilot.desktop $(CURDIR)/debian/sshpilot/usr/share/applications/io.github.mfat.sshpilot.desktop

override_dh_auto_test:
	# Skip tests for now (can be enabled later)

override_dh_auto_clean:
	# Nothing to clean