{
    "app-id": "io.github.mfat.sshpilot",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "sshpilot",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=x11",
        "--device=dri",
        "--filesystem=home",
        "--filesystem=~/.ssh:rw",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.portal.Desktop",
        "--talk-name=org.freedesktop.portal.FileChooser",
        "--env=TERM=xterm-256color"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "python3-paramiko",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"paramiko>=3.4\" --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/source/p/paramiko/paramiko-3.4.0.tar.gz",
                    "sha256": "aac08f26a31dc4dffd92821527d1682d99d52f9ef6851968114a8728f3c274d3"
                }
            ]
        },
        {
            "name": "python3-pyyaml",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"PyYAML>=6.0\" --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/source/P/PyYAML/PyYAML-6.0.1.tar.gz",
                    "sha256": "bfdf460b1736c775f2ba9f6a92bca30bc2095067b8a9d77876d1fad6cc3b4a43"
                }
            ]
        },
        {
            "name": "python3-secretstorage",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"SecretStorage>=3.3\" --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/source/S/SecretStorage/SecretStorage-3.3.3.tar.gz",
                    "sha256": "2403533ef369eca6d2ba81718576c5e0f564d5cca1b58f73a8b23e7d4eeebd77"
                }
            ]
        },
        {
            "name": "python3-cryptography",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"cryptography>=42.0\" --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/source/c/cryptography/cryptography-42.0.5.tar.gz",
                    "sha256": "6fe07eec95dfd477eb9530aef5bead34fec819b3aaf6c5bd6d20565da607bfe1"
                }
            ]
        },
        {
            "name": "python3-matplotlib",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"matplotlib>=3.8\" --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/source/m/matplotlib/matplotlib-3.8.4.tar.gz",
                    "sha256": "8aac397d5e9ec158960e31c381c5ffc52ddd52bd9a47717e2a694038167dffea"
                }
            ]
        },
        {
            "name": "sshpilot",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mfat/sshpilot.git",
                    "tag": "v1.0.0"
                }
            ]
        }
    ]
}